pipeline {
    agent any
    stages {
        stage('BUILD') {
           steps {
             echo " This is build steps "
             sh " sleep 5 "
           }
        }
        stage('DEPLOY') {
           steps {
             echo " This is DEPLOY steps "
             sh " sleep 5 "
           }
        }
        stage('TEST') {
           steps {
             echo " This is Test steps "
             sh " sleep 5 "
           }
        } 
    }
}  
            
                
               
            
